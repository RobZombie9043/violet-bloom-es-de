	<include>./_inc/systems/overrides/${system.theme}.xml</include>
	
	<!-- Font Sizes -->
	<fontSize name="small">
		<variables>
			<systemDescriptionFontSize>0.021</systemDescriptionFontSize>
			<systemDescriptionLineSpacing>1.666</systemDescriptionLineSpacing>
			<gamelistMetadataFontSize>0.020</gamelistMetadataFontSize>
			<gamelistDescriptionFontSize>0.017</gamelistDescriptionFontSize>
			<gamelistTextlistFontSize>0.026</gamelistTextlistFontSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<systemDescriptionFontSize>0.024</systemDescriptionFontSize>
			<systemDescriptionLineSpacing>1.458333</systemDescriptionLineSpacing>
			<gamelistMetadataFontSize>0.022</gamelistMetadataFontSize>
			<gamelistDescriptionFontSize>0.020</gamelistDescriptionFontSize>
			<gamelistTextlistFontSize>0.028</gamelistTextlistFontSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<systemDescriptionFontSize>0.027</systemDescriptionFontSize>
			<systemDescriptionLineSpacing>1.296</systemDescriptionLineSpacing>
			<gamelistMetadataFontSize>0.024</gamelistMetadataFontSize>
			<gamelistDescriptionFontSize>0.023</gamelistDescriptionFontSize>
			<gamelistTextlistFontSize>0.030</gamelistTextlistFontSize>
		</variables>
	</fontSize>
	<fontSize name="x-large">
		<variables>
			<systemDescriptionFontSize>0.030</systemDescriptionFontSize>
			<systemDescriptionLineSpacing>1.5</systemDescriptionLineSpacing>
			<gamelistMetadataFontSize>0.026</gamelistMetadataFontSize>
			<gamelistDescriptionFontSize>0.026</gamelistDescriptionFontSize>
			<gamelistTextlistFontSize>0.032</gamelistTextlistFontSize>
		</variables>
	</fontSize>
	
